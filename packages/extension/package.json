{
  "name": "betterer-vscode",
  "displayName": "Betterer",
  "publisher": "Betterer",
  "private": true,
  "description": "VSCode extension for @betterer/betterer",
  "version": "5.4.0",
  "main": "./dist/client/client.js",
  "author": "Craig Spence <craigspence0@gmail.com>",
  "homepage": "https://phenomnomnominal.github.io/betterer",
  "repository": {
    "type": "git",
    "url": "https://github.com/phenomnomnominal/betterer.git"
  },
  "bugs": {
    "url": "https://github.com/phenomnomnominal/betterer/issues"
  },
  "engines": {
    "vscode": "^1.62.0"
  },
  "categories": [
    "Linters"
  ],
  "activationEvents": [
    "*"
  ],
  "icon": "images/logo.png",
  "galleryBanner": {
    "color": "#eaff00",
    "theme": "light"
  },
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Betterer",
      "properties": {
        "betterer.alwaysShowStatus": {
          "type": "boolean",
          "default": true,
          "description": "Always show the Betterer status bar item.",
          "scope": "window"
        },
        "betterer.enable": {
          "scope": "resource",
          "type": "boolean",
          "default": true,
          "description": "Controls whether Betterer is enabled or not."
        },
        "betterer.cachePath": {
          "scope": "resource",
          "type": "string",
          "default": "./.betterer.cache",
          "description": "Path to Betterer cache file relative to working directory"
        },
        "betterer.configPath": {
          "scope": "resource",
          "type": "string",
          "default": "./.betterer.ts",
          "description": "Path to test definition file relative to working directory"
        },
        "betterer.resultsPath": {
          "scope": "resource",
          "type": "string",
          "default": "./.betterer.results",
          "description": "Path to test results file relative to working directory"
        },
        "betterer.filters": {
          "scope": "resource",
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            ".*"
          ],
          "description": "Select tests to run by RegExp. Takes multiple values"
        }
      }
    },
    "commands": [
      {
        "title": "Initialise Betterer in the current workspace",
        "category": "betterer",
        "command": "betterer.init"
      },
      {
        "title": "Enable Betterer",
        "category": "betterer",
        "command": "betterer.enable"
      },
      {
        "title": "Disable Betterer",
        "category": "betterer",
        "command": "betterer.disable"
      },
      {
        "title": "Show Betterer output channel",
        "category": "betterer",
        "command": "betterer.showOutputChannel"
      }
    ],
    "languages": [
      {
        "id": "javascript",
        "filenames": [
          ".betterer.results"
        ]
      }
    ]
  },
  "scripts": {
    "build:extension": "npm run build:client && npm run build:server",
    "build:extension:watch": "run-p build:client:watch build:server:watch",
    "build:client": "webpack --config webpack.client.config.js",
    "build:client:watch": "webpack --config webpack.client.config.js --watch",
    "build:server": "webpack --config webpack.client.config.js",
    "build:server:watch": "webpack --config webpack.server.config.js --watch",
    "package": "vsce package --npm",
    "test:extension": "tsc --project ./tsconfig.e2e.json && node ./dist/test/runner/index.js",
    "vscode:prepublish": "npm run build:extension"
  },
  "dependencies": {
    "lodash.debounce": "^4.0.8",
    "vscode-languageclient": "^7.0.0",
    "vscode-languageserver": "^7.0.0",
    "vscode-languageserver-textdocument": "^1.0.3",
    "vscode-uri": "^3.0.2"
  },
  "devDependencies": {
    "@betterer/betterer": "^5.4.0",
    "@betterer/cli": "^5.4.0",
    "@betterer/errors": "^5.3.0",
    "@betterer/logger": "^5.3.4",
    "@types/lodash.debounce": "^4.0.6",
    "@types/vscode": "^1.62.0",
    "@vscode/test-electron": "^2.3.9",
    "typescript": "^5.4.5",
    "ts-loader": "^9.5.1",
    "vitest": "^1.5.1",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "webpack-node-externals": "^3.0.0"
  }
}